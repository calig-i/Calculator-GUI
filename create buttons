# create button disabled

from tkinter import *
# root widget
root = Tk()
# disable button - greyed out
myButton = Button(root, text="Click Me!", state=DISABLED)
myButton.pack()

root.mainloop()

"""
"""

#change size of button

from tkinter import *
# root widget
root = Tk()
# padx changes width (x axis) of button, padx=50 button wider. pady changes height (y axis) of button, pady=50 button taller.
myButton = Button(root, text="Click Me!", padx=50, pady=50)
myButton.pack()

root.mainloop()

"""
"""

# ---------Add Function to Buttons--------------

from tkinter import *
# root widget
root = Tk()

# myClick adds function to button
def myClick():
  myLabel = Label(root, text="Look! I clicked a button!")
  myLabel.pack()

# command= calls funtion myClick. n.b.  we dont put brackets after fnction here, unusual
myButton = Button(root, text="Click Me!", command=myClick)
myButton.pack()

root.mainloop()

"""
"""
