# change colour of button

from tkinter import *

# root widget
root = Tk()

def myClick():
  myLabel = Label(root, text="Look! I clicked a button!")
  myLabel.pack()
  
# fg = foreground (text) colour, bg = background colour -seems to work once you have clicked it. Also accepts hex colour codes, e.g. #ffffff for white

myButton = Button(root, text="Click Me!", command=myClick, fg="blue", bg="#ffffff")
myButton.pack()

root.mainloop()

